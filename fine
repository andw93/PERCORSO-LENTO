<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Percorso Lento - Fine (con Fotocamera)</title>
    <script>
        let video;
        let canvas;
        let context;
        let lastImageData;
        let motionDetected = false;

        function stopTimer() {
            const startTime = localStorage.getItem('startTime');
            if (startTime) {
                const elapsedTime = (Date.now() - startTime) / 1000; // Tempo in secondi
                localStorage.setItem('elapsedTime', elapsedTime);
                alert("Timer fermato! Tempo impiegato: " + elapsedTime + " secondi.");
            } else {
                alert("Il timer non è stato avviato.");
            }
        }

        function detectMotion() {
            context.drawImage(video, 0, 0, canvas.width, canvas.height);
            const currentImageData = context.getImageData(0, 0, canvas.width, canvas.height);

            if (lastImageData) {
                const diff = calculateDifference(lastImageData, currentImageData);
                if (diff > 20) { // Soglia per rilevare movimento
                    if (!motionDetected) {
                        motionDetected = true;
                        stopTimer();
                    }
                }
            }
            lastImageData = currentImageData;
        }

        function calculateDifference(img1, img2) {
            let diff = 0;
            for (let i = 0; i < img1.data.length; i += 4) {
                const rDiff = Math.abs(img1.data[i] - img2.data[i]);
                const gDiff = Math.abs(img1.data[i + 1] - img2.data[i + 1]);
                const bDiff = Math.abs(img1.data[i + 2] - img2.data[i + 2]);
                diff += rDiff + gDiff + bDiff;
            }
            return diff / (img1.data.length / 4); // Media della differenza
        }

        function startVideo() {
            video = document.getElementById('video');
            canvas = document.getElementById('canvas');
            context = canvas.getContext('2d');

            navigator.mediaDevices.getUserMedia({ video: true })
                .then((stream) => {
                    video.srcObject = stream;
                    video.play();
                    setInterval(detectMotion, 100); // Controlla il movimento ogni 100ms
                })
                .catch((err) => {
                    alert("Errore nell'accesso alla fotocamera: " + err);
                });
        }
    </script>
</head>
<body onload="startVideo()">
    <h1>Percorso Lento - Fine</h1>
    <video id="video" width="320" height="240" style="display: none;"></video>
    <canvas id="canvas" width="320" height="240" style="display: none;"></canvas>
    <p>Il timer sarà fermato automaticamente al rilevamento del veicolo.</p>
</body>
</html>
